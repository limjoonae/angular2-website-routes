{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors":true,
    "outDir": "build",
    "outFile": "build/all.js",
    "declaration": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": [
    "node_modules",
    "build"
  ],
  
  "filesGlob": [
    "app/**/*.ts",
    "typings/index.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
